// 左侧导航栏分类名
.sidebar-heading span {
    font-size: 1.2em;
    font-weight: bold;
}

// 左侧导航栏字体
.sidebar .sidebar-links li .sidebar-link {
    font-size: 16px !important;
}

// 右侧导航栏字体
.page .sidebar-link {
    font-size: 16px !important;
}

// 右侧导航栏滚动条
.page .side-bar {
    overflow-y: auto !important;
}

// navbar字体大小
.navbar .links {
    font-size: 16px !important;
}

// 容器样式：tip
.custom-block.tip {
    background-color: #d4d4d452 !important;
    border-color: #67cc86bb !important;
    margin: 0.5rem 0 !important;
}

// 容器样式：warning
.custom-block.warning {
    background-color: #ffa16d47 !important;
}

// 容器样式：danger
.custom-block.danger {
    background-color: #f9b4b457 !important;
}

// 时间线样式：年份
.timeline-wrapper .year {
    margin: 80px 0px 20px !important;
    font-size: 27px !important;
}

// 时间线样式：文章列表
.timeline-wrapper .year-wrapper li {
    padding: 10px 20px 10px !important;
    border-bottom: 2px solid #999da06b !important;
    background: #c1c1e626;
    border-radius: 5rem;
    margin: 5px 0px;
    transition: all 0.5s;
}

// 时间线样式：文章悬浮样式
.timeline-wrapper .year-wrapper li:hover {
    transform: translate(50px, 0);
    transition: all 0.5s;
}

// 时间线样式：文章字体
.timeline-wrapper .year-wrapper li .date {
    font-size: 16px !important;
    width: 50px !important;
}

// 时间线样式：文章样式
.timeline-wrapper .year-wrapper li .date:before {
    top: 22px !important;
    border: 1px solid !important;
}

// 时间线样式：文章样式
.timeline-wrapper:after {
    background: skyblue !important;
}

// 时间线样式：timeLineMsg字体大小(theme/locales/zh-hans.js)
.timeline-wrapper .desc {
    font-size: 20px !important;
}

// 时间线样式：timeLineMsg和year的圆点颜色
.timeline-wrapper .desc:before, .timeline-wrapper .year:before {
    background: cadetblue !important;
}

// 首页个人信息：作者
.personal-info-wrapper .name {
    font-size: 22px !important;
    font-weight: bold;
}

// 首页个人信息：文章数和标签数
.personal-info-wrapper .num {
    font-size: 20px !important;
}

// 文章列表样式
.abstract-item {
    background-color: #acdcfd3d !important;
    transition: all 0.5s;
}

// 文章列表样式：悬浮效果
.abstract-item:hover {
    transform: scale(1.02);
    transition: all 0.5s;
}

// 滚动条样式
::-webkit-scrollbar {
    width: 6px !important;
}

// 滚动条的设置
::-webkit-scrollbar-thumb {
    background-color: #94989c8c !important;
    background-clip: padding-box !important;
    -webkit-border-radius: 10em !important;
    -moz-border-radius: 10em !important;
    border-radius: 10em !important;
}

// 滚动条凹槽的颜色，还可以设置边框属性
::-webkit-scrollbar-track-piece {
    background-color: transparent !important;
    -webkit-border-radius: 0em !important;
    -moz-border-radius: 0em !important;
    border-radius: 0em !important;
}

// 滚动条鼠标移上去
::-webkit-scrollbar-thumb:hover {
    background-color: #bbb !important;
}

